{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bundle Manifest",
  "type": "object",
  "required": [
    "manifest_version",
    "bundle_hash",
    "immutable_files"
  ],
  "properties": {
    "manifest_version": {
      "type": "integer",
      "minimum": 1
    },
    "bundle_hash": {
      "type": "string"
    },
    "immutable_files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": {"type": "string"},
          "sha256": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
