{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Intent Checks",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent_hash",
    "status",
    "checks"
  ],
  "properties": {
    "intent_hash": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "status"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "skip"
            ]
          },
          "evidence": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}