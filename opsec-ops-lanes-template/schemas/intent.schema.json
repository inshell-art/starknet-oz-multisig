{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Onchain Operation Intent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "network",
    "lane",
    "signer_alias",
    "tx",
    "semantic",
    "hashes"
  ],
  "properties": {
    "network": {
      "type": "string"
    },
    "lane": {
      "type": "string"
    },
    "signer_alias": {
      "type": "string"
    },
    "tx": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "to",
        "entrypoint",
        "calldata"
      ],
      "properties": {
        "to": {
          "type": "string",
          "description": "Target contract address (hex string)."
        },
        "entrypoint": {
          "type": "string",
          "description": "Entry point / function name."
        },
        "calldata": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "number"
            ]
          }
        },
        "value": {
          "type": "string",
          "description": "Native value, if applicable (hex or decimal string)."
        }
      }
    },
    "semantic": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "summary"
      ],
      "properties": {
        "summary": {
          "type": "string"
        },
        "expected_effect": {
          "type": "string"
        },
        "risk": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "hashes": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "intent_hash"
      ],
      "properties": {
        "intent_hash": {
          "type": "string"
        },
        "bundle_hash": {
          "type": "string"
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "generated_at": {
          "type": "string"
        },
        "git_commit": {
          "type": "string"
        },
        "tool": {
          "type": "string"
        }
      }
    }
  }
}